<p id="notice"><%= notice %></p>

<h1>To Do Lists</h1>

  
    <div class="panel panel-default">
    <% @todo_lists.each do |todo_list| %>
    <div class="todo_list" id="<%=dom_id(todo_list) %>">
    <div class="panel-heading"> 
        <h2 class="panel-title"><%= todo_list.title %></h2>
      </div>
      <div class="panel-body">
        <p>"<%= todo_list.description %>"</p>
        
        <ul class="functions">
          <button type="button" class="function-list-button"><li><%= link_to "List Items", todo_list_todo_items_path(todo_list) %></li></button>
          <button type="button" class="function-show-btn"><li><%= link_to 'Show', todo_list %></li></button>
          <button type="button" class="function-edit-btn"><li><%= link_to 'Edit', edit_todo_list_path(todo_list) %></li></button>
          <button type="button" class="function-delete-btn"><li><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></li></button>
      </ul>
    </div>
      <br class="clear" />
    
    </div>
    <% end %>
  </div>
<br>

<button type="button" class="btn btn-default navbar-btn"><%= link_to 'New List', new_todo_list_path %></button>
