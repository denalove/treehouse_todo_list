<h1><%= @todo_list.title %></h1>


<table class="todo_items">
	<thead>
		<tr>
			<th width="25%">Completed?</th>
			<th width="65%">Content</th>
			<th width="10%">Functions</th>
		</tr>
	</thead>
	<tbody>
	<% @todo_list.todo_items.each do |todo_item| %>
	<tr id="<%= dom_id(todo_item) %>">
		
		
		<td>
			<% if todo_item.completed? %>
				<%= todo_item.completed_at %>
			<% else %>
				<%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch %>
				
			<% end %>
		</td>
		<td><%= todo_item.content %></td>
		<td>
			<button type="button" class="function-edit-btn"><%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %></button>
			<button type="button" class="function-delete-btn"><%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?"} %></button>
		</td>
	</tr>
	<% end %>
  </tbody>
</table>

<p>
  <button type="button" class="new-item-btn"><%= link_to "New Item", new_todo_list_todo_item_path %></button>

</p>